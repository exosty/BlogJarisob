<h4>Comments:</h4>
<% @post.comments.each do |comment| %>
      <div id="comment_<%= comment.id %>">
        <b><%= comment.user.email %></b> <%= time_ago_in_words(comment.created_at) %> ago said:
        <br>
        <i><%= comment.body %></i>
        <br>

        <% if user_signed_in? %>
            <% if can? :destroy, comment %>
                <%= link_to 'Delete', [comment.post, comment], method: :delete,
                            class: "btn btn-danger btn-xs", remote: true %>
            <% end %>
        <% end %>
        <br>
      </div>
<% end %>

