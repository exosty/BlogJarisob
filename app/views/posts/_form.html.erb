<%= form_for(@post, html: {multipart: true}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, size: '40x10' %>
  </div>
  <br>
  <div>
    <% if @post.image.exists? %>
        <%= image_tag @post.image.url(:thumb) %><br/>
    <% end %>
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
  </div>
  <br>
  <div class="field">
    <%= f.label :tag_list %><br>
    <%= f.text_field :tag_list, size: '40x10' %>
  </div>
  <br>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, size:'75x15' %>
  </div>
  <div class="actions ">
    <%= f.submit class: "btn btn-success btn-default" %>
  </div>
<% end %>
